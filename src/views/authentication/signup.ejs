<%- include('../partials/header.ejs', {title: 'Sign Up | TaskWave'}); %>

<main class="bg-light">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
          <div class="card-body p-4 p-sm-5">
            <div class="text-center mb-4">
              <h2 class="fw-bold">Create Your Account</h2>
              <p class="text-muted">Join thousands of teams managing projects with TaskWave</p>
            </div>

            <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% errors.forEach(error => { %>
                    <li><%= error.msg %></li>
                  <% }); %>
                </ul>
              </div>
            <% } %>

            <form action="/signup" method="POST">
              <div class="row g-3">
                <div class="col-md-6">
                  <div class="form-floating">
                    <input 
                      type="text" 
                      class="form-control <%= typeof errors !== 'undefined' && errors.find(e => e.param === 'firstName') ? 'is-invalid' : '' %>" 
                      id="firstName" 
                      name="firstName" 
                      placeholder="John" 
                      value="<%= typeof oldInput !== 'undefined' ? oldInput.firstName : '' %>"
                      required
                    >
                    <label for="firstName">First Name</label>
                    <% if (typeof errors !== 'undefined') { %>
                      <% const firstNameError = errors.find(e => e.param === 'firstName'); %>
                      <% if (firstNameError) { %>
                        <div class="invalid-feedback">
                          <%= firstNameError.msg %>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-floating">
                    <input 
                      type="text" 
                      class="form-control <%= typeof errors !== 'undefined' && errors.find(e => e.param === 'lastName') ? 'is-invalid' : '' %>" 
                      id="lastName" 
                      name="lastName" 
                      placeholder="Doe" 
                      value="<%= typeof oldInput !== 'undefined' ? oldInput.lastName : '' %>"
                      required
                    >
                    <label for="lastName">Last Name</label>
                    <% if (typeof errors !== 'undefined') { %>
                      <% const lastNameError = errors.find(e => e.param === 'lastName'); %>
                      <% if (lastNameError) { %>
                        <div class="invalid-feedback">
                          <%= lastNameError.msg %>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-floating">
                    <input 
                      type="email" 
                      class="form-control <%= typeof errors !== 'undefined' && errors.find(e => e.param === 'email') ? 'is-invalid' : '' %>" 
                      id="email" 
                      name="email" 
                      placeholder="name@example.com" 
                      value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>"
                      required
                    >
                    <label for="email">Email Address</label>
                    <% if (typeof errors !== 'undefined') { %>
                      <% const emailError = errors.find(e => e.param === 'email'); %>
                      <% if (emailError) { %>
                        <div class="invalid-feedback">
                          <%= emailError.msg %>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-floating">
                    <input 
                      type="password" 
                      class="form-control <%= typeof errors !== 'undefined' && errors.find(e => e.param === 'password') ? 'is-invalid' : '' %>" 
                      id="password" 
                      name="password" 
                      placeholder="Password" 
                      required
                    >
                    <label for="password">Password</label>
                    <% if (typeof errors !== 'undefined') { %>
                      <% const passwordError = errors.find(e => e.param === 'password'); %>
                      <% if (passwordError) { %>
                        <div class="invalid-feedback">
                          <%= passwordError.msg %>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-floating">
                    <input 
                      type="password" 
                      class="form-control <%= typeof errors !== 'undefined' && errors.find(e => e.param === 'confirmPassword') ? 'is-invalid' : '' %>" 
                      id="confirmPassword" 
                      name="confirmPassword" 
                      placeholder="Confirm Password" 
                      required
                    >
                    <label for="confirmPassword">Confirm Password</label>
                    <% if (typeof errors !== 'undefined') { %>
                      <% const confirmPasswordError = errors.find(e => e.param === 'confirmPassword'); %>
                      <% if (confirmPasswordError) { %>
                        <div class="invalid-feedback">
                          <%= confirmPasswordError.msg %>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </div>

                <div class="col-12">
                  <div class="form-check">
                    <input 
                      class="form-check-input <%= typeof errors !== 'undefined' && errors.find(e => e.param === 'terms') ? 'is-invalid' : '' %>" 
                      type="checkbox" 
                      id="terms" 
                      name="terms"
                      <%= typeof oldInput !== 'undefined' && oldInput.terms === 'on' ? 'checked' : '' %>
                    >
                    <label class="form-check-label" for="terms">
                      I agree to the <a href="/terms" target="_blank">Terms of Service</a> and <a href="/privacy" target="_blank">Privacy Policy</a>
                    </label>
                    <% if (typeof errors !== 'undefined') { %>
                      <% const termsError = errors.find(e => e.param === 'terms'); %>
                      <% if (termsError) { %>
                        <div class="invalid-feedback d-block">
                          <%= termsError.msg %>
                        </div>
                      <% } %>
                    <% } %>
                  </div>
                </div>

                <div class="col-12 mt-4">
                  <button type="submit" class="btn btn-primary w-100 py-3">Create Account</button>
                </div>
              </div>
            </form>

            <div class="text-center mt-4">
              <p class="mb-0">Already have an account? <a href="/login">Log in</a></p>
            </div>

            <div class="d-flex align-items-center my-4">
              <hr class="flex-grow-1">
              <span class="mx-3 text-muted">OR</span>
              <hr class="flex-grow-1">
            </div>

            <div class="row g-2">
              <div class="col-md-6">
                <a href="/auth/google" class="btn btn-outline-danger w-100">
                  <i class="fab fa-google me-2"></i> Sign up with Google
                </a>
              </div>
              <div class="col-md-6">
                <a href="/auth/github" class="btn btn-outline-dark w-100">
                  <i class="fab fa-twitter me-2"></i> Sign up with Twitter
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer.ejs'); %>